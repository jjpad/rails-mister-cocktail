<div class="text-center">
  <h1>Add a cocktail!</h1>
</div>

<div class="text-center">
  <%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <p>
    <%= f.submit class: "btn btn-danger" %>
  </p>
</div>
<% end %>


<p class="text-center">
  <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
</p>




